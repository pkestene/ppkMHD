[run]
solver_name=MHD_Muscl_3D
tend=TEND
nstepmax=10000
noutput=1

[mpi]
mx=MX
my=MY
mz=MZ

[mesh]
nx=NX
ny=NY
nz=NZ
xmax=3.0
ymax=1.5
zmax=1.5
boundary_type_xmin=3
boundary_type_xmax=3
boundary_type_ymin=3
boundary_type_ymax=3
boundary_type_zmin=3
boundary_type_zmax=3

[hydro]
gamma0=1.6666666667
cfl=0.4
niter_riemann=10
iorder=2
slope_type=2
problem=wave
riemann=hlld
smallr=1e-8
smallc=1e-8

[wave]
type=WAVETYPE

[output]
outputPrefix=wave_3d
outputVtkAscii=false

[other]
implementationVersion=0
